<h1>Edit Coupon: <%= link_to @coupon.name, merchant_coupon_path, method: :get %></h1>

<center>
  <%= form_tag merchant_coupon_path, method: :patch  do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, "#{@coupon.name}"%>

  <%= label_tag :code %>
  <%= text_field_tag :code, "#{@coupon.code}"%>

  <%= label_tag :discount %>
  <%= text_field_tag :discount, "#{@coupon.discount}"%>

  <%= submit_tag 'Update Coupon' %>
<% end %>
</center>
